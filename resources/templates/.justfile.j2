set dotenv-load

# Build app by running bootJar dependencies
build:
  ./gradlew resolveMainClassName

# Run app
run: build
  ./gradlew bootRun

# Build docker image
docker-build: build
  docker compose build

# Run app in docker
docker-up: docker-build
  docker compose up -d

# Stop and remove docker containers
docker-down:
  docker compose down

# Stop and remove docker containers, names volumes and images
docker-clean:
  docker compose down --volumes --rmi all

# Run sh shell in docker
docker-shell:
  docker exec -it $PROJECT_NAME-app sh 

# Clean up build, docker container and image
clean: docker-clean
  ./gradlew clean